<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp">
        <TextView
            android:id="@+id/login_title"
            style="@style/LabelStyle"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Smart Hidroponik Register"
            android:textSize="25dp"
            android:textColor="@color/hitam"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:background="@drawable/splash_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <EditText
            android:id="@+id/email_address_regist"
            style="@style/EditTextStyle"
            android:layout_below="@+id/login_welcome_msg"
            android:hint="@string/email_address_hint"
            android:inputType="textEmailAddress"
            android:layout_marginTop="100dp"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/password_regist"
            style="@style/EditTextStyle"
            android:layout_below="@+id/email_address_regist"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@color/orangmuda"
            android:layout_width="350dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/btn_register"
            style="@style/SolidButtonStyle"
            android:layout_below="@+id/password_regist"
            android:layout_marginTop="@dimen/layout_in_between_margin"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Register"/>
        <TextView
            android:id="@+id/moto"
            android:text="@string/moto"
            android:gravity="center"
            android:layout_marginTop="@dimen/divider_start_and_end_margin"
            android:textColor="@color/dimGray"
            style="@style/LabelStyle"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/loginregist"
            style="@style/LabelStyle"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="LOGIN"
            android:textColor="@color/account"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>